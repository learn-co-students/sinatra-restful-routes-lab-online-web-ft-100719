<form action="/recipes/<%= @recipe.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="name" name="name">Recipe Name</label>
  <input type="text" id="name" name="recipe[name]" value= "<%= @recipe.name %>">
  <label for="ingredients" name="ingredients">Ingredients</label>
  <input type="text" id="ingredients" name="recipe[ingredients]" value= "<%= @recipe.ingredients %>">
  <label for="cook_time" name="cook_time">Cook Time</label>
  <input type="text" id="cook_time" name="recipe[cook_time]" value= "<%= @recipe.cook_time %>">
  <input type="submit" value="submit">
</form>